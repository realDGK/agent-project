{
  "title": "Environmental Reliance Letter Extraction",
  "type": "object",
  "properties": {
    "contract_name": {
      "type": "string",
      "description": "The name of the document, typically 'Reliance Letter'."
    },
    "effective_date": { "type": "string", "format": "date" },
    "parties": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "role": {
            "type": "string",
            "enum": ["Consultant", "Relying Party"]
          }
        },
        "required": ["name", "role"]
      }
    },
    "reliance_letter_details": {
      "type": "object",
      "properties": {
        "original_report_title": { "type": "string" },
        "original_report_date": { "type": "string", "format": "date" },
        "original_client": { "type": "string" }
      }
    },
    "discovered_entities": {
        "type": "array",
        "items": {
            "type": "object",
            "properties": {
                "entity_name": { "type": "string" },
                "entity_value": { "type": "string" },
                "context_summary": { "type": "string" }
            }
        }
    }
  },
  "required": ["contract_name", "effective_date", "parties", "reliance_letter_details"]
}