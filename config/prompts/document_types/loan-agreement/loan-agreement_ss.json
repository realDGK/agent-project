{
  "title": "Loan Agreement Extraction",
  "type": "object",
  "properties": {
    "contract_name": {
      "type": "string",
      "description": "The name of the document, e.g., 'Construction Loan Agreement'."
    },
    "effective_date": { "type": "string", "format": "date" },
    "parties": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "role": {
            "type": "string",
            "enum": ["Borrower", "Lender", "Guarantor"]
          }
        },
        "required": ["name", "role"]
      }
    },
    "loan_details": {
      "type": "object",
      "properties": {
        "loan_amount": { "type": "number" },
        "interest_rate": { "type": "string" },
        "maturity_date": { "type": "string", "format": "date" },
        "repayment_terms": { "type": "string" },
        "collateral": { "type": "string" },
        "key_covenants": { "type": "array", "items": { "type": "string" } }
      }
    },
    "discovered_entities": {
        "type": "array",
        "items": {
            "type": "object",
            "properties": {
                "entity_name": { "type": "string" },
                "entity_value": { "type": "string" },
                "context_summary": { "type": "string" }
            }
        }
    }
  },
  "required": ["contract_name", "effective_date", "parties", "loan_details"]
}