{
  "title": "CC&Rs Extraction",
  "type": "object",
  "properties": {
    "contract_name": {
      "type": "string",
      "description": "The name of the document, e.g., 'Declaration of Covenants, Conditions, and Restrictions'."
    },
    "effective_date": { "type": "string", "format": "date" },
    "parties": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "role": {
            "type": "string",
            "enum": ["Declarant", "Homeowners Association"]
          }
        },
        "required": ["name", "role"]
      }
    },
    "ccr_details": {
      "type": "object",
      "properties": {
        "property_description": { "type": "string" },
        "association_name": { "type": "string" },
        "use_restrictions_summary": { "type": "string" },
        "assessment_provisions": { "type": "string" }
      }
    },
    "legal_recording_details": {
      "type": "object",
      "properties": {
        "instrument_number": { "type": "string" },
        "recording_date": { "type": "string", "format": "date" }
      }
    },
    "discovered_entities": {
        "type": "array",
        "items": {
            "type": "object",
            "properties": {
                "entity_name": { "type": "string" },
                "entity_value": { "type": "string" },
                "context_summary": { "type": "string" }
            }
        }
    }
  },
  "required": ["contract_name", "parties", "ccr_details"]
}