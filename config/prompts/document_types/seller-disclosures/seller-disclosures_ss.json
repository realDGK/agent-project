{
  "title": "Seller Disclosures Extraction",
  "type": "object",
  "properties": {
    "contract_name": {
      "type": "string",
      "description": "The name of the document, e.g., 'Seller\'s Property Disclosure Statement'."
    },
    "effective_date": {
      "type": "string",
      "format": "date",
      "description": "The date the disclosure was signed."
    },
    "parties": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "role": {
            "type": "string",
            "enum": ["Seller", "Buyer"]
          }
        },
        "required": ["name", "role"]
      }
    },
    "disclosure_details": {
      "type": "object",
      "properties": {
        "property_address": {
          "type": "string"
        },
        "disclosed_issues": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "category": { "type": "string" },
              "issue": { "type": "string" },
              "explanation": { "type": "string" }
            }
          },
          "description": "A list of all affirmative disclosures made by the seller."
        }
      }
    },
    "discovered_entities": {
        "type": "array",
        "items": {
            "type": "object",
            "properties": {
                "entity_name": { "type": "string" },
                "entity_value": { "type": "string" },
                "context_summary": { "type": "string" }
            }
        }
    }
  },
  "required": ["contract_name", "effective_date", "parties", "disclosure_details"]
}