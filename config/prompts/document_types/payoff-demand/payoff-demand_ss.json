{
  "title": "Payoff Demand Letter Extraction",
  "type": "object",
  "properties": {
    "contract_name": {
      "type": "string",
      "description": "The name of the document, e.g., 'Payoff Demand Statement'."
    },
    "effective_date": { "type": "string", "format": "date" },
    "parties": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "role": {
            "type": "string",
            "enum": ["Lender", "Borrower", "Escrow Holder"]
          }
        },
        "required": ["name", "role"]
      }
    },
    "payoff_details": {
      "type": "object",
      "properties": {
        "loan_number": { "type": "string" },
        "property_address": { "type": "string" },
        "payoff_amount": { "type": "number" },
        "good_through_date": { "type": "string", "format": "date" },
        "per_diem_interest": { "type": "number" }
      }
    },
    "discovered_entities": {
        "type": "array",
        "items": {
            "type": "object",
            "properties": {
                "entity_name": { "type": "string" },
                "entity_value": { "type": "string" },
                "context_summary": { "type": "string" }
            }
        }
    }
  },
  "required": ["contract_name", "effective_date", "parties", "payoff_details"]
}