{
  "title": "Environmental Indemnity Extraction",
  "type": "object",
  "properties": {
    "contract_name": {
      "type": "string",
      "description": "The name of the document, typically 'Environmental Indemnity Agreement'."
    },
    "effective_date": { "type": "string", "format": "date" },
    "parties": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "role": {
            "type": "string",
            "enum": ["Indemnitor", "Indemnitee", "Lender", "Borrower"]
          }
        },
        "required": ["name", "role"]
      }
    },
    "indemnity_details": {
      "type": "object",
      "properties": {
        "property_address": { "type": "string" },
        "indemnified_matters": { "type": "string" }
      }
    },
    "discovered_entities": {
        "type": "array",
        "items": {
            "type": "object",
            "properties": {
                "entity_name": { "type": "string" },
                "entity_value": { "type": "string" },
                "context_summary": { "type": "string" }
            }
        }
    }
  },
  "required": ["contract_name", "effective_date", "parties", "indemnity_details"]
}