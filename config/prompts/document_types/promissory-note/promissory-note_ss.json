{
  "title": "Promissory Note Extraction",
  "type": "object",
  "properties": {
    "contract_name": {
      "type": "string",
      "description": "The name of the document, typically 'Promissory Note'."
    },
    "effective_date": { "type": "string", "format": "date" },
    "parties": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "role": {
            "type": "string",
            "enum": ["Maker", "Borrower", "Payee", "Lender"]
          }
        },
        "required": ["name", "role"]
      }
    },
    "loan_details": {
      "type": "object",
      "properties": {
        "principal_amount": { "type": "number" },
        "interest_rate": { "type": "string" },
        "maturity_date": { "type": "string", "format": "date" },
        "payment_terms": { "type": "string" },
        "is_secured": { "type": "boolean" }
      }
    },
    "discovered_entities": {
        "type": "array",
        "items": {
            "type": "object",
            "properties": {
                "entity_name": { "type": "string" },
                "entity_value": { "type": "string" },
                "context_summary": { "type": "string" }
            }
        }
    }
  },
  "required": ["contract_name", "effective_date", "parties", "loan_details"]
}