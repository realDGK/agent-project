{
  "title": "Answer/Cross-Complaint Extraction",
  "type": "object",
  "properties": {
    "contract_name": {
      "type": "string",
      "description": "The name of the document, e.g., 'Answer to Complaint'."
    },
    "effective_date": { "type": "string", "format": "date" },
    "parties": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "role": {
            "type": "string",
            "enum": ["Plaintiff", "Defendant", "Cross-Complainant", "Cross-Defendant"]
          }
        },
        "required": ["name", "role"]
      }
    },
    "litigation_details": {
      "type": "object",
      "properties": {
        "case_number": { "type": "string" },
        "affirmative_defenses": { "type": "array", "items": { "type": "string" } },
        "cross_complaint_summary": { "type": "string" }
      }
    },
    "discovered_entities": {
        "type": "array",
        "items": {
            "type": "object",
            "properties": {
                "entity_name": { "type": "string" },
                "entity_value": { "type": "string" },
                "context_summary": { "type": "string" }
            }
        }
    }
  },
  "required": ["contract_name", "effective_date", "parties", "litigation_details"]
}