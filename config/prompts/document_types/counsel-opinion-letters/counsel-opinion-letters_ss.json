{
  "title": "Counsel Opinion Letter Extraction",
  "type": "object",
  "properties": {
    "contract_name": {
      "type": "string",
      "description": "The name of the document, e.g., 'Legal Opinion Letter'."
    },
    "effective_date": { "type": "string", "format": "date" },
    "parties": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "role": {
            "type": "string",
            "enum": ["Author", "Counsel", "Recipient", "Client"]
          }
        },
        "required": ["name", "role"]
      }
    },
    "legal_opinion_details": {
      "type": "object",
      "properties": {
        "subject_matter": { "type": "string" },
        "opinion_summary": { "type": "string" },
        "qualifications_and_assumptions": { "type": "string" }
      }
    },
    "discovered_entities": {
        "type": "array",
        "items": {
            "type": "object",
            "properties": {
                "entity_name": { "type": "string" },
                "entity_value": { "type": "string" },
                "context_summary": { "type": "string" }
            }
        }
    }
  },
  "required": ["contract_name", "effective_date", "parties", "legal_opinion_details"]
}