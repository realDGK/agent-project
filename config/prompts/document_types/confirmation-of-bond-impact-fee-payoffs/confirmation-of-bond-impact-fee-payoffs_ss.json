{
  "title": "Confirmation of Payoff Extraction",
  "type": "object",
  "properties": {
    "contract_name": {
      "type": "string",
      "description": "The name of the document, e.g., 'Confirmation of Bond Payoff'."
    },
    "effective_date": { "type": "string", "format": "date" },
    "parties": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "role": {
            "type": "string",
            "enum": ["Confirming Agency", "Property Owner"]
          }
        },
        "required": ["name", "role"]
      }
    },
    "fee_details": {
      "type": "object",
      "properties": {
        "property_apn": { "type": "string" },
        "obligation_paid": { "type": "string" },
        "confirmation_statement": { "type": "string" }
      }
    },
    "discovered_entities": {
        "type": "array",
        "items": {
            "type": "object",
            "properties": {
                "entity_name": { "type": "string" },
                "entity_value": { "type": "string" },
                "context_summary": { "type": "string" }
            }
        }
    }
  },
  "required": ["contract_name", "effective_date", "parties", "fee_details"]
}