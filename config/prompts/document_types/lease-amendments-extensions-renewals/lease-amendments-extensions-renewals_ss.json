{
  "title": "Lease Amendment/Extension/Renewal Extraction",
  "type": "object",
  "properties": {
    "contract_name": {
      "type": "string",
      "description": "The name of the document, e.g., 'First Amendment to Lease'."
    },
    "effective_date": { "type": "string", "format": "date" },
    "parties": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "role": {
            "type": "string",
            "enum": ["Landlord", "Tenant"]
          }
        },
        "required": ["name", "role"]
      }
    },
    "lease_amendment_details": {
      "type": "object",
      "properties": {
        "amendment_type": { "type": "string", "enum": ["Amendment", "Extension", "Renewal"] },
        "original_lease_date": { "type": "string", "format": "date" },
        "summary_of_changes": { "type": "string" },
        "new_expiration_date": { "type": "string", "format": "date" },
        "new_rent_terms": { "type": "string" }
      }
    },
    "discovered_entities": {
        "type": "array",
        "items": {
            "type": "object",
            "properties": {
                "entity_name": { "type": "string" },
                "entity_value": { "type": "string" },
                "context_summary": { "type": "string" }
            }
        }
    }
  },
  "required": ["contract_name", "effective_date", "parties", "lease_amendment_details"]
}