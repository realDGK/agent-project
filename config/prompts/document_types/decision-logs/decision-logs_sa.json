{
  "decision_log_details": {
    "type": "object",
    "description": "Details specific to a project decision log.",
    "properties": {
      "project_name": { "type": "string" },
      "decisions": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "decision_id": { "type": "string" },
            "date": { "type": "string", "format": "date" },
            "decision": { "type": "string" },
            "reason": { "type": "string" }
          }
        }
      }
    }
  }
}