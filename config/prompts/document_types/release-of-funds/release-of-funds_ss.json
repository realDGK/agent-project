{
  "title": "Release of Funds Authorization Extraction",
  "type": "object",
  "properties": {
    "contract_name": {
      "type": "string",
      "description": "The name of the document, e.g., 'Authorization to Release Funds'."
    },
    "effective_date": { "type": "string", "format": "date" },
    "parties": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "role": {
            "type": "string",
            "enum": ["Authorizing Party", "Receiving Party", "Holding Party"]
          }
        },
        "required": ["name", "role"]
      }
    },
    "release_details": {
      "type": "object",
      "properties": {
        "escrow_or_account_number": { "type": "string" },
        "amount_to_release": { "type": "number" },
        "reason_for_release": { "type": "string" }
      }
    },
    "discovered_entities": {
        "type": "array",
        "items": {
            "type": "object",
            "properties": {
                "entity_name": { "type": "string" },
                "entity_value": { "type": "string" },
                "context_summary": { "type": "string" }
            }
        }
    }
  },
  "required": ["contract_name", "effective_date", "parties", "release_details"]
}