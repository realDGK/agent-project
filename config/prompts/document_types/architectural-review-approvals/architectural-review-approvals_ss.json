{
  "title": "Architectural Review Approval Extraction",
  "type": "object",
  "properties": {
    "contract_name": {
      "type": "string",
      "description": "The name of the document, e.g., 'Architectural Committee Approval'."
    },
    "effective_date": { "type": "string", "format": "date" },
    "parties": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "role": {
            "type": "string",
            "enum": ["Applicant", "Approving Body", "HOA"]
          }
        },
        "required": ["name", "role"]
      }
    },
    "entitlement_details": {
      "type": "object",
      "properties": {
        "project_description": { "type": "string" },
        "approval_statement": { "type": "string" },
        "approved_plans_reference": { "type": "string" }
      }
    },
    "discovered_entities": {
        "type": "array",
        "items": {
            "type": "object",
            "properties": {
                "entity_name": { "type": "string" },
                "entity_value": { "type": "string" },
                "context_summary": { "type": "string" }
            }
        }
    }
  },
  "required": ["contract_name", "effective_date", "parties", "entitlement_details"]
}