{
  "title": "Change Order/Directive Extraction",
  "type": "object",
  "properties": {
    "contract_name": {
      "type": "string",
      "description": "The name of the document, e.g., 'Change Order No. 10'."
    },
    "effective_date": { "type": "string", "format": "date" },
    "parties": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "role": {
            "type": "string",
            "enum": ["Owner", "Contractor", "Architect"]
          }
        },
        "required": ["name", "role"]
      }
    },
    "change_order_details": {
      "type": "object",
      "properties": {
        "project_name": { "type": "string" },
        "change_order_number": { "type": "string" },
        "description_of_change": { "type": "string" },
        "cost_impact": { "type": "number" },
        "schedule_impact_days": { "type": "integer" }
      }
    },
    "discovered_entities": {
        "type": "array",
        "items": {
            "type": "object",
            "properties": {
                "entity_name": { "type": "string" },
                "entity_value": { "type": "string" },
                "context_summary": { "type": "string" }
            }
        }
    }
  },
  "required": ["contract_name", "effective_date", "parties", "change_order_details"]
}