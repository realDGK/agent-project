{
  "loan_details": {
    "type": "object",
    "description": "Details specific to a loan or financing agreement.",
    "properties": {
      "loan_amount": { "type": "number" },
      "interest_rate": { "type": "string" },
      "loan_term": { "type": "string" },
      "amortization_period": { "type": "string" },
      "commitment_fee": { "type": "number" },
      "commitment_expiration_date": { "type": "string", "format": "date" },
      "maturity_date": { "type": "string", "format": "date" },
      "repayment_terms": { "type": "string" },
      "collateral": { "type": "string" },
      "key_covenants": { "type": "array", "items": { "type": "string" } },
      "principal_amount": { "type": "number" },
      "payment_terms": { "type": "string" },
      "is_secured": { "type": "boolean" },
      "secured_debt_amount": { "type": "number" },
      "promissory_note_date": { "type": "string", "format": "date" }
    }
  }
}