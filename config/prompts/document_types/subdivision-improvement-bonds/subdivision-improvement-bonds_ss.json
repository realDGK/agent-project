{
  "title": "Subdivision/Improvement Bond Extraction",
  "type": "object",
  "properties": {
    "contract_name": {
      "type": "string",
      "description": "The name of the document, e.g., 'Performance Bond'."
    },
    "effective_date": { "type": "string", "format": "date" },
    "parties": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "role": {
            "type": "string",
            "enum": ["Principal", "Surety", "Obligee"]
          }
        },
        "required": ["name", "role"]
      }
    },
    "bond_details": {
      "type": "object",
      "properties": {
        "bond_number": { "type": "string" },
        "bond_type": { "type": "string", "enum": ["Performance", "Payment", "Faithful Performance", "Monumentation"] },
        "penal_sum": { "type": "number" },
        "project_description": { "type": "string" }
      }
    },
    "discovered_entities": {
        "type": "array",
        "items": {
            "type": "object",
            "properties": {
                "entity_name": { "type": "string" },
                "entity_value": { "type": "string" },
                "context_summary": { "type": "string" }
            }
        }
    }
  },
  "required": ["contract_name", "effective_date", "parties", "bond_details"]
}