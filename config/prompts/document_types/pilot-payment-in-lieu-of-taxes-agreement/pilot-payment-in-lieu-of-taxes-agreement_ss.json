{
  "title": "PILOT Agreement Extraction",
  "type": "object",
  "properties": {
    "contract_name": {
      "type": "string",
      "description": "The name of the document, e.g., 'Payment in Lieu of Taxes Agreement'."
    },
    "effective_date": { "type": "string", "format": "date" },
    "parties": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "role": {
            "type": "string",
            "enum": ["Company", "Public Agency", "City"]
          }
        },
        "required": ["name", "role"]
      }
    },
    "tax_agreement_details": {
      "type": "object",
      "properties": {
        "project_name": { "type": "string" },
        "property_address": { "type": "string" },
        "payment_schedule": { "type": "string" },
        "term_of_agreement": { "type": "string" }
      }
    },
    "discovered_entities": {
        "type": "array",
        "items": {
            "type": "object",
            "properties": {
                "entity_name": { "type": "string" },
                "entity_value": { "type": "string" },
                "context_summary": { "type": "string" }
            }
        }
    }
  },
  "required": ["contract_name", "effective_date", "parties", "tax_agreement_details"]
}